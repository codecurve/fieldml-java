<fieldml>
  <!--
    Produced by OpenCMISS, using the LaplaceExample project with a 4x4x0 mesh computed by 2 nodes. This file
    represents the first node's output.
   -->

  <discrete_domain id="mesh.element" value="index">
    <component id="id">
      3  4  7  8  11  12  15  16
    </component>
  </discrete_domain>
  
  <discrete_domain id="mesh.node" value="index">
    <component id="id">
      3  4  5  8  9  10  14  15  19  20  24  25
    </component>
  </discrete_domain>
  
  <continuous_domain id="node.parameters">
    <component id="x" />
    <component id="y" />
    <component id="g" />
    <component id="n" />
  </continuous_domain>
  
  <!--
    We should just induce a specially-named component index domain for each
    explicitly defined domain. 
   -->
  <discrete_domain id="node.parameters.component_name">
    <component id="name">
      x y g n
    </component>
  </discrete_domain>

  <discrete_domain id="mesh.element_nodes" value="index">
    <import_component id="node1" domain="mesh.node" component="id" />
    <import_component id="node2" domain="mesh.node" component="id" />
    <import_component id="node3" domain="mesh.node" component="id" />
    <import_component id="node4" domain="mesh.node" component="id" />
  </discrete_domain>
  
  <!--
    Elements of a "field" type domain component must all have the same input
    parameter and value types. 
   -->
  <discrete_domain id="interpolation_field" value="field">
    <component id="interpolator" >
      library::bilinear_interpolation  library::bicubic_hermite_interpolation
    </component>
  </discrete_domain>

  <field id="element.bilinear_parameters" value_domain="library::bilinear_interpolation_parameters">
    <parameter id="element" domain="mesh.element" />
    <parameter id="component_name" domain="node.parameters.component_name" />
    
    <derived_parameter id="nodes" field="element.nodes" >
      <parameter id="element" />
    </derived_parameter>
    
    <derived_parameter id="node1_parameters"  field="node.parameters">
      <parameter id="nodes.node1" />
    </derived_parameter>
    <derived_parameter id="node2_parameters"  field="node.parameters">
      <parameter id="nodes.node2" />
    </derived_parameter>
    <derived_parameter id="node3_parameters"  field="node.parameters">
      <parameter id="nodes.node3" />
    </derived_parameter>
    <derived_parameter id="node4_parameters"  field="node.parameters">
      <parameter id="nodes.node4" />
    </derived_parameter>
    
    <assign_named_component id="u1" parameter="node1_parameters" name="component_name" />
    <assign_named_component id="u2" parameter="node2_parameters" name="component_name" />
    <assign_named_component id="u3" parameter="node3_parameters" name="component_name" />
    <assign_named_component id="u4" parameter="node4_parameters" name="component_name" />
  </field>
  
  <field id="element.bilinear_interpolator" value_domain="library::infinite_line">
    <parameter id="element" domain="mesh.element" />
    <parameter id="xi" domain="library::unit_square" />
    <parameter id="component_name" domain="node.parameters.component_name" />

    <derived_parameter id="parameter_values" field="element.bilinear_parameters">
      <parameter id="element"/>
      <parameter id="component_name"/>
    </derived_parameter>
     
    <derived_parameter id="interpolated_value" field="library::bilinear_interpolation" />
    
    <assign_component id="value" parameter="interpolated_value" component="value"/>
  </field>

  <field id="mesh.coordinates" value_domain="library::cartesian_2d">
    <parameter id="element" domain="mesh.element" />
    <parameter id="xi" domain="library::unit_square" />
    
    <derived_parameter id="interpolation_field" field="element.coordinate_interpolation_field">
      <parameter id="element" />
    </derived_parameter>
    
    <!--
      This implies that the basis functions need to be re-evaluated for each
      dof, even though the xi is the same each time. However, we can define
      a field-domain consisting of various co-ordinate interpolators (or
      indeed any other kind of interpolator) that does the job in batches,
      allowing the phi vector to be re-used.  
     -->
    <derived_parameter id="interpolated_x" parameter_field="interpolation_field">
      <parameter id="element" />
      <parameter id="xi" />
      <literal_parameter value="1" />
    </derived_parameter>
    <derived_parameter id="interpolated_y" parameter_field="interpolation_field">
      <parameter id="element" />
      <parameter id="xi" />
      <literal_parameter value="2" />
    </derived_parameter>

    <assign_component id="x" parameter="interpolated_x" component="value" />

    <assign_component id="y" parameter="interpolated_y" component="value" />
  </field>
  
  <field id="mesh.g" value_domain="library::infinite_line">
    <parameter id="element" domain="mesh.element" />
    <parameter id="xi" domain="library::unit_square" />
    
    <derived_parameter id="interpolation_field" field="element.g_interpolation_field">
      <parameter id="element" />
    </derived_parameter>
    
    <derived_parameter id="interpolated_g" parameter_field="interpolation_field">
      <parameter id="element" />
      <parameter id="xi" />
      <literal_parameter value="1" />
    </derived_parameter>

    <assign_component id="g" parameter="interpolated_g" component="value" />
  </field>

  <field id="mesh.n" value_domain="library::infinite_line">
    <parameter id="element" domain="mesh.element" />
    <parameter id="xi" domain="library::unit_square" />
    
    <derived_parameter id="interpolation_field" field="element.n_interpolation_field">
      <parameter id="element" />
    </derived_parameter>
    
    <derived_parameter id="interpolated_n" parameter_field="interpolation_field">
      <parameter id="element" />
      <parameter id="xi" />
      <literal_parameter value="1" />
    </derived_parameter>

    <assign_component id="n" parameter="interpolated_n" component="value" />
  </field>

  <mapped_field id="node.parameters" value_domain="node.parameters">
